<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<!-- 	NOTE: state_checked can't happen and thats' the reason for declaring it. -->
<!-- 	Without it, the button will be sized to fit the icon, which is too small. -->
	<item android:drawable="@android:drawable/btn_default" android:state_checked="true" />
	<item android:drawable="@drawable/alice_btn_pressed" android:state_pressed="true"/>
	<item android:drawable="@android:color/transparent"/>
	

</selector>